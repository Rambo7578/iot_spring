<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="user">

<select id="selectUser" resultType="ui" parameterType="ui">
		select
		uNo,uName,uId,uPwd,uEmail,admin 
		from user_info
		where 1=1
		<if test="uId!=null">
			and uId = #{uId}
		</if>
		<if test="uPwd!=null">
			and uId = #{uPwd}
		</if>
	</select>
	
	<select id="checkUser" resultType="int" parameterType="ui">
		select
		count(1)
		from user_info
		where uid=#{uId}
	</select>
	
	
	<insert id="insertUser" parameterType="map">
	insert into user_info(uName,uId,uPwd,uEmail,admin)
	value(#{uName},#{uId},#{uPwd},#{uEmail},#{admin})
	
	</insert>
	



</mapper>
